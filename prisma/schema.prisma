generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String @id @default(uuid())
  clients_id String

  username String
  email    String
  password String

  client Clients @relation(fields: [clients_id], references: [id])

  @@map("users")
}

model Clients {
  id         String @id @default(uuid())
  title      String
  logo       String
  background String
  url        String @unique

  created_at   DateTime @default(now())
  created_user String?
  changed_at   DateTime @default(now())
  changed_user String?

  Users      Users[]
  Categories Categories[]

  @@map("clients")
}

model Categories {
  id         Int    @id @default(autoincrement())
  clients_id String

  title String

  created_at   DateTime @default(now())
  created_user String?
  changed_at   DateTime @default(now())
  changed_user String?

  Products Products[]
  Options  Options[]

  client Clients @relation(fields: [clients_id], references: [id])

  @@map("categories")
}

model Products {
  id            String @id @default(uuid())
  categories_id Int

  image_url        String
  title            String
  description      String?
  price_original   String
  price_discounted String?

  categories Categories @relation(fields: [categories_id], references: [id])

  @@map("products")
}

model Options {
  id            Int @id @default(autoincrement())
  categories_id Int

  required    Boolean
  title       String
  description String

  categories  Categories    @relation(fields: [categories_id], references: [id])
  OptionsList OptionsList[]

  @@map("options")
}

model OptionsList {
  id         Int @id @default(autoincrement())
  options_id Int

  title String
  price Int

  options Options @relation(fields: [options_id], references: [id])

  @@map("options_list")
}
