generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int @id @default(autoincrement())
  clients_id Int

  username String
  email    String
  password String
  Clients  Clients? @relation(fields: [clients_id], references: [id])

  @@map("users")
}

model Clients {
  id         Int    @id @default(autoincrement())
  title      String
  logo       String
  background String
  url        String @unique

  created_at   DateTime @default(now())
  created_user String?
  changed_at   DateTime @default(now())
  changed_user String?

  Users      Users[]
  Categories Categories[]
  Products   Products[]

  @@map("clients")
}

model Categories {
  id         Int @id @default(autoincrement())
  clients_id Int

  title String

  created_at   DateTime @default(now())
  created_user String?
  changed_at   DateTime @default(now())
  changed_user String?

  Products Products[]
  Options  Options[]
  Clients  Clients?   @relation(fields: [clients_id], references: [id])

  @@map("categories")
}

model Products {
  id            Int @id @default(autoincrement())
  categories_id Int
  clients_id    Int

  image_url        String
  title            String
  description      String?
  price_original   Decimal  @db.Decimal(10, 2)
  price_discounted Decimal? @db.Decimal(10, 2)

  created_at   DateTime? @default(now())
  created_user String?
  changed_at   DateTime  @default(now())
  changed_user String

  categories Categories @relation(fields: [categories_id], references: [id])
  client     Clients    @relation(fields: [clients_id], references: [id])

  @@map("products")
}

model Options {
  id            Int @id @default(autoincrement())
  categories_id Int

  required    Boolean
  title       String
  description String

  categories  Categories    @relation(fields: [categories_id], references: [id])
  OptionsList OptionsList[]

  @@map("options")
}

model OptionsList {
  id         Int @id @default(autoincrement())
  options_id Int

  title String
  price Int

  options Options @relation(fields: [options_id], references: [id])

  @@map("options_list")
}
