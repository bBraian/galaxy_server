generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id         String @id @default(uuid())
  clients_id String

  username String
  email    String
  password String

  @@map("users")
}

model Clients {
  id         String @id @default(uuid())
  title      String
  logo       String
  background String
  url        String @unique

  created_at   DateTime @default(now())
  created_user String?
  changed_at   DateTime @default(now())
  changed_user String?

  @@map("clients")
}

model Categories {
  id        Int    @id @default(autoincrement())
  client_id String

  title String

  created_at   DateTime @default(now())
  created_user String?
  changed_at   DateTime @default(now())
  changed_user String?

  @@map("categories")
}

model Products {
  id            String @id @default(uuid())
  categories_id String

  image_url        String
  title            String
  description      String?
  price_original   String
  price_discounted String?

  @@map("products")
}

model Options {
  id            Int    @id @default(autoincrement())
  categories_id String

  required    Boolean
  title       String
  description String

  @@map("options")
}

model OptionsList {
  id         Int    @id @default(autoincrement())
  options_id String

  title String
  price Int

  @@map("options_list")
}
